package com.example.Feign_Client.Controller;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestBody;
import org.springframework.web.bind.annotation.RestController;

import com.example.Feign_Client.interfaces.Productinf;
import com.example.Feign_Client.Model.Product;

@RestController
public class FeignController 
{
	@Autowired
	 Productinf prod;
	@GetMapping("/product")
	public String productAll()
	{
		return prod.getProduct();
	}
	@GetMapping("/findname")
	public String  findN()
	{
		return prod.getNAme();
	}
	
	//--using classobj---------
	@PostMapping("/createProduct")
	public Product createProduct(@RequestBody Product pr)
	{
		return prod.createproduct(pr);
		
	}
	
	@GetMapping("/getAllProducts")
	public List<Product> getlistOfproducts()
	{
		return prod.getlistproducts();
		
	}
}
