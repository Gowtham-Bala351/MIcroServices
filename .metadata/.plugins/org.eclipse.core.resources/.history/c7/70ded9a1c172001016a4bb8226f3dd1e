package com.circuit.LoadBalance.controller;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.context.annotation.Lazy;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.RestController;
import org.springframework.web.client.RestTemplate;

import com.circuit.LoadBalance.config.LoadbalConfig;

@RestController
public class LoadBalController {
	
	@Autowired
	@Lazy
	private RestTemplate restemp;
	@GetMapping("/getdataload")
	public String getdata()
	{
		return restemp.getForObject("http://Order_ld_chk/getfrom", String.class);
	}
	
	
}
